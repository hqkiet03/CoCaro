<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:orientation="vertical"
    tools:context=".HistoryActivity">
    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#08478A"
        android:padding="4dp"
        android:text="Recent Result"
        android:textAlignment="center"
        android:fontFamily="@font/satisfy_regular"
        android:textColor="@color/color_white"
        android:textSize="47sp"
        android:textStyle="bold" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_brown"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="Game"
            android:textColor="#FFEB3B"
            android:textAlignment="center"
            android:textStyle="bold"
            android:fontFamily="@font/satisfy_regular"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:textSize="28sp" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="The Winner"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"

            android:textColor="#FFEB3B"

            android:textAlignment="center"
            android:textStyle="bold"
            android:fontFamily="@font/satisfy_regular"
            android:textSize="28sp" />


        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"

            android:text="Time"
            android:textColor="#FFEB3B"

            android:textAlignment="center"
            android:textSize="28sp"
            android:fontFamily="@font/satisfy_regular"
            android:textStyle="bold" />
    </LinearLayout>

    <ListView
        android:id="@+id/lv_infoHistory"
        android:layout_width="match_parent"
        android:background="@color/color_brown"
        android:layout_height="515dp"

        />

    <Button
        android:id="@+id/btnback"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:backgroundTint="#EF1B0C"
        android:lineSpacingExtra="14sp"
        android:layout_marginTop="10dp"
        android:text="Back"
        android:fontFamily="@font/satisfy_regular"
        android:textSize="30sp"
        android:textStyle="bold"/>

</LinearLayout>